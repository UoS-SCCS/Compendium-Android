<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/sccs_logo"
        android:layout_width="150dp"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/compedium_logo"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="64dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sccs_logo"
        app:srcCompat="@drawable/ic_owl_logo_nonstop" />

    <TextView
        android:id="@+id/compendium_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="16dp"
        android:textSize="42dp"
        android:visibility="invisible"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compedium_logo"/>
    <TextView
        android:layout_marginTop="64dp"
        android:id="@+id/developed_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developed_by"
        android:visibility="invisible"
        android:textSize="18dp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compendium_title"/>
    <ImageView
        android:id="@+id/castellate_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/castellate"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developed_by"/>


</androidx.constraintlayout.widget.ConstraintLayout>